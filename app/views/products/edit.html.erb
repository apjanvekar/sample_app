<h1>Editing product</h1>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product_name %><br />
    <%= f.text_field :product_name %>
  </p>
  <p>
    <%= f.label :pro_des %><br />
    <%= f.text_area :pro_des %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>